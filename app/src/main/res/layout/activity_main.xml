<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alphav"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/joker"/>

    <!-- Content Layout -->
        <!-- Your content here -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/alpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="70dp">



<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:elevation="10dp"-->
<!--                    app:cardBackgroundColor="#CC808080"-->
<!--                    android:layout_height="match_parent">-->

<!--                    -->


<!--                </androidx.cardview.widget.CardView>-->
                <TextView
                    android:id="@+id/head"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:fontFamily= "@font/youmurdererbb_reg"
                    android:text="D e a t h"
                    android:textAlignment="center"
                    android:textSize="70dp"
                    android:textStyle="bold"
                    />



            </LinearLayout>

            <!--Card layout-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Media -->


                    <ImageView

                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/pain" />


                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MainActivity">


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Name of person-->
                        <TextView
                            android:textSize="30dp"
                            android:id="@+id/name"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAlignment="center"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:fontFamily= "@font/youmurdererbb_reg"
                            />

                        <!--                Age they died at-->
                        <TextView
                            android:textSize="25dp"
                            android:textAlignment="center"
                            android:id="@+id/age"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text=""
                            android:paddingBottom="10dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:fontFamily= "@font/youmurdererbb_reg"
                            />

                        <!--                Quote -->
                        <TextView
                            android:textSize="15dp"
                            android:textAlignment="center"
                            android:id="@+id/writing"
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="for input"
                            android:fontFamily= "@font/friday13"
                            android:text="" />

                    </LinearLayout>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="80dp">

                <TextView

                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:fontFamily= "@font/youmurdererbb_reg"
                    android:text="Please Enter Your Age here"
                    />

                <EditText
                    android:backgroundTint="@color/white"
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="for message"
                    android:ems="10"
                    android:inputType="text"
                    android:minHeight="50dp"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck"
                    tools:layout_editor_absoluteX="99dp"
                    tools:layout_editor_absoluteY="116dp" />
            </LinearLayout>


            <!--      Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">


                <!--Submit Button-->
                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_margin="30dp"
                    android:fontFamily= "@font/youmurdererbb_reg"
                    android:textSize="25dp"
                    android:text="Submit" />

                <!--assist in spacing items-->
                <Space
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <!--Clear Button-->
                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_margin="30dp"
                    android:fontFamily= "@font/youmurdererbb_reg"
                    android:textSize="30dp"
                    android:text="Clear" />
            </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>



